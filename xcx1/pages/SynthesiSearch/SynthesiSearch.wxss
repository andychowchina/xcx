@import "../../app.wxss";
.inputQuestionTitle{margin-left:35rpx;margin-top:0px;display:flex;z-index:2;width:90%;top:0;background-color:#f8f8f8;height:37px;border:1px solid #ccc;border-radius:40rpx;}
