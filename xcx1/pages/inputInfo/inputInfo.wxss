page{height:100%;background-color:#79cfe6}
.content{height:100%}
.index_bg{height:100%;position:absolute;z-index:-1}

/*标题*/
.show_title{color:#fff;text-align:center;padding:15px 0;font-size:40rpx}
 /*确认信息*/
 .next_step{position:fixed;bottom:0;width:100%;background-color:#09c;z-index:2}
 .next_step button{background-color:#09c;color:#fff}

 
  /*显示企业信息*/
  .show_center{margin-bottom:150rpx}
  .input_info{background-color:#fff;border:1px solid #eee;border-radius:5px;margin:0rpx 20rpx 0 20rpx}
  .input_info .flex-wrp{display:flex;margin:10px 5px;padding-bottom:10px;border-bottom:1px solid #eee}
  .input_info .flex-wrp:last-child{border:0;padding-bottom:0}
  .input_info .cus_title{width:30%;font-size:30rpx;line-height:58rpx;color:#09c}
  .input_info .cus_content{width:70%}
  .cus_tax text{width:20%}
  .input_info .cus_content input{font-size:30rpx}

  /*背景图*/
.index_bg{height:100%;width:100%;display:flex;flex-direction:column;align-items:center;justify-content:center;background-color:#79cfe6}

  /*选择县市*/
.picker{font-size:30rpx;}