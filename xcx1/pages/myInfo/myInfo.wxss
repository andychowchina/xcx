@import "../index/index.wxss";
@import "../../app.wxss";
page{background-color: #EDEDED;}
.myInfo{ width: auto;position: relative;
}
.myInfo_photo .image{width: 100rpx;overflow:hidden; border-radius: 50%; margin:auto;}
.myInfo_text {font-size: 33rpx;}
.myInfo_text view:last-child{color: #ffffff;margin-top: 10rpx;}
.myInfo_function{display: flex;margin-top:10rpx;background-color: #ffffff;padding: 30rpx 0rpx;}
.myInfo_function .myInfo_function_text{width: 20%; text-align: center;margin-top: 5px;}
.myInfo_function icon{background: linear-gradient(to right, #008ECF , #0055B3);color: #ffffff;border-radius:50%;display: inline;padding: 20rpx;}
.myInfo_function .myInfo_function_text text{font-size: 28rpx;margin-top: 15px;display: inline-block;}

.my_function{margin-top: 10rpx;background-color: #ffffff;padding-bottom: 120rpx;}
.my_function view{margin-bottom: 20rpx;padding: 10px 0px 10px 10px;display: flex;}
.my_function view text{font-size: 30rpx;position: relative;top: 5px;display: block; width: 90%;border-bottom: 1px solid #CCCCCC;}
.my_function view:last-child text{border: 0;}
.my_function icon{font-size: 45rpx;color: #0093D4;margin-right: 5px;width: 10%;text-align: center;padding-bottom:8px;}

/*顶部信息*/
.nav-title{text-align: left;margin-left:35rpx;}

/*我的信息背景图*/
.myInfo_bg{width: 100%;background: linear-gradient(to right, #008ECF , #0055B3);}
/*我的信息内容*/
.myInfo_content{position: absolute;z-index: 2;left:0;right:0; top:10%;margin:auto; width: 60%;text-align: center}
/*完善信息*/
.completeMyInfo{color: #ffffff;margin-top: 30rpx;font-size: 25rpx;}
.completeMyInfo text{border: 1px solid #ffffff;border-radius: 10px;padding: 5px 8px;background-color: #000345; font-size: 20rpx;}
/*我的相关信息*/
.completeMyInfoFunction{display: flex;color: #ffffff;font-size:33rpx;margin-top: 52rpx;}
.completeMyInfoFunction view{width: 33%;text-align: center;}
.completeMyInfoFunction text{display: block;}

.button_kefu{margin-bottom:10px;padding:0;padding-bottom:10px;padding-left:10px;display:flex;height:112rpx;background:#fff!important}.button-hover{color:#000;background:#fff}
.button_kefu text{font-size:30rpx;position:relative;display:block;width:90%;text-align:left;border-bottom:1px solid #ccc}
