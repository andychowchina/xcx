@import '../index/index.wxss';
@import "../../app.wxss";

page{background-color: #F9F9F9}
.publish_input textarea{height: 100px;padding: 10px 10px;font-size: 14px;background-color: #ffffff;width: auto; margin-top: 10px;}
.publish_title{font-size: 14px; padding:10px; background-color: #ffffff; color: #666666;}
::-webkit-scrollbar { display: none;}
.publish_image{padding: 10px;background-color: #ffffff;}
.publish_image_add{display: inline-block;width:80px;height: 80px;background-color: #F2F2F2; color: #8B8B8B;text-align: center;line-height: 75px;font-size:50px;}
.dt_content_img{padding: 0px;}
.publish_position{border-top:1px solid #eeeeee;border-bottom:1px solid #eeeeee;padding:5px 10px;background-color: #ffffff;}
form{height: auto;}
.publish_content{height: auto;}
.publish_function{position: fixed;bottom: 0;}
.publish_position text{font-size: 12px;color: #999999;}
.publish_position icon{margin-right: 5px;}
.clear{clear: both;}
/*底部功能按钮*/
.publish_function{width: 100%;background-color: #ffffff;display: flex;height:50px;
}
.publish_function_leftBtn{width: 20%;text-align: center;line-height: 50px;}
.publish_function_leftBtn .iconfont{font-size: 24px;}
.publish_function_rightBtn{width: 40%;text-align: right;}
.publish_function_rightBtn .publish_button{background-color:#1296DB;display: inline-block;color: #ffffff;padding: 5px 20px;margin: 10px 15px 0px 0px;border-radius: 5px;}
/*选择服务*/
.publish_service{background-color:#fff;display:flex;font-size:30rpx;margin-top:50rpx;padding:10rpx 0rpx}
.service_img{width:20%;text-align:center}
.service_icon{width:20%;text-align:center;line-height:120rpx}
.service_icon icon{font-size:50rpx;color:#eee}
.service_img image{width:200rpx;height:200rpx}
.service_content{width:60%;padding-left:25rpx}
.service_text{padding:10rpx 0}
.service_bookNum{padding:10rpx 0}
.icon-guanbi{font-size:26rpx;width:40rpx;height:40rpx;text-align:center;margin-top:-20rpx}
