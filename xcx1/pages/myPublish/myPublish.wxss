@import "../index/index.wxss";
@import "../../app.wxss";
page{background-color: #EDEDED;}
.top_tab{position:static;}
.content{margin-top:0px; }
.userImage{width: 20%;text-align: center;}
.userImage image{width: 100rpx;height:100rpx;border-radius:50%; }
.userBaseInfo{display: flex;width: 80%;position: relative;}
.userBaseInfo_text{color: #ffffff;padding:10rpx 0rpx 0rpx 20rpx; }
.userBaseInfo_text text{margin-left: 10rpx;}
.loading{padding: 10rpx;text-align: center;}
.loading:before{display: inline-block;margin-right: 5rpx;vertical-align: middle;content: '';width: 40rpx;height: 40rpx;
  /* background: url(../../images/icon-loading.png) no-repeat; */
background-size: contain;
animation: rotate 1s linear infinite;
}
.loading.complete:before{display: none;}
.user{width: 80%;font-size: 26rpx;}

/*用户信息背景图*/
.userInfo{position: relative;}
.userInfo_bg image{height: 100px;width: 100%}
/*用户信息*/
.userInfoContent{position: absolute;top: 30%;display: flex;color: #ffffff; margin: 0 auto;left: 0;right: 0;width: 95%;}
.userName{font-size:30rpx;padding:10rpx 0rpx 0rpx 20rpx;  }
/*关注按钮*/
.userInfoAttation{margin-top: 20rpx;}
/*咨询内容*/
.section{margin-top: 15rpx;padding: 10rpx 0rpx;}
.content_function{border-top:1px solid #CCCCCC;padding-top:0rpx;}
.content_function view{padding: 10rpx 0rpx 15rpx 0rpx;border:0px;}
.dt_content_text text:last-child{overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
