/*提问头部的输入框*/
@import "../../app.wxss";

.inputQuestionTitle {
  margin-left: 35rpx;
  margin-top: 0;
  display: flex;
  width: 90%;
  top: 0;
  background-color: #f8f8f8;
  height: 37px;
  border: 1px solid #ccc;
  border-radius: 40rpx;
}

.select-query {
  width: 9%;
  text-align: center;
  line-height: 70rpx;
  color: #4bb3e0;
  font-size: 30rpx;
  height: 70rpx;
  margin-left: 10rpx;
}

.inputQuestionBox {
  position: fixed;
  width: 100%;
  z-index: 222;
  background: #fff;
  margin-top: -119rpx;
  padding: 10rpx 0;
  padding-top: 30rpx;
}

.questionBox {
  width: 80%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  text-indent: 10rpx;
}

.select-empty {
  width: 40rpx;
  color: #ccc;
  line-height: 50rpx;
  font-size: 50rpx;
  text-align: center;
  height: 40rpx;
  margin-top: 14rpx;
  margin-right: 27rpx;
  text-indent: -3.5rpx;
}

.Headportrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.inputQuestionTitle input {
  width: 100%;
  height: 100%;
}

/*输入时根据关键字查询问题*/

.questionList {
  margin: 60px 10px 10px 10px;
}

.questionList_box {
  margin-left: 30rpx;
  font-size: 32rpx;
}

.questionList_text {
  border-bottom: 1px solid #eee;
  display: flex;
  padding: 10px 5px;
}

.questionList_title {
  font-size: 32rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.red {
  color: red;
}

.questionList_info {
  font-size: 26rpx;
  color: #666;
  margin-top: 5px;
}

.classifyTheme {
  overflow: hidden;
}

.imgline {
  width: 128rpx;
  height: 70rpx;
  line-height: 70rpx;
  position: relative;
  border-radius: 30rpx;
  float: left;
  margin: 16rpx 25rpx;
  color: #0092d4;
  text-align: center;
  font-size: 26rpx;
}

.imgline-active {
  background: #0093d4;
  color: #fff;
}

.loading {
  font-size: 28rpx;
  text-align: center;
  margin: 40rpx;
}


